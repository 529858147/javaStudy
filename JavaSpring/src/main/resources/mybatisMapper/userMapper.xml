<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.how2j.spring.springTransaction.mapper.UserMapper">
    <resultMap id="userResultMap" type="com.how2j.spring.springTransaction.bean.User">
        <result column="username" jdbcType="VARCHAR" property="name" javaType="java.lang.String"/>
    </resultMap>
    <select id="queryUserByName" resultMap="userResultMap">
        select username, age from user
        <where>
            username = #{name}
        </where>
    </select>
    <select id="queryUserList" resultMap="userResultMap">
        select username, age
        from user
    </select>
    <insert id="addUser" parameterType="arraylist">
        insert into user(username, age) value
        <foreach collection="list" item="user" index="index" separator=",">
            (#{user.name}, #{user.age})
        </foreach>
    </insert>
    <delete id="deleteUser">
        delete
        from user
    </delete>
</mapper>